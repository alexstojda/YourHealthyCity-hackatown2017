<!DOCTYPE html>
<html>
  <head>
    <!-- bootstrapMD css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.3.0/css/mdb.min.css" />

    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <link href="/stylesheets/main.css" rel="stylesheet" type="text/css">
  <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 100%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>

  <body>
    <form name="Search">
      Search Radius: <input type="number" id="radius" min=0/>
      Calories: <input type="number" id="calories" min=0 />
      Carbohydrates: <input type="number" id="carbohydrates" min=0 />g
      Proteins: <input type="number" id="proteins" min=0 />g
      Fats: <input type="number" id="fats" min=0 />g
      <input type="button" name="Submit" value="Submit" onclick="test(getCurrentLocation)" />
    </form>
    <div class="test"></div>

    <!-- Google Maps -->
    <div id="map"></div>

    <script src="https://cdn.klokantech.com/maptilerlayer/v1/index.js"></script>
    <script src="scripts/initialize.js"></script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjRzs7JZLOITyIzbgICgZeQIqyqzcAfMo&callback=initMap">
    </script>

    <% include partials/detail-view.ejs %>
  </body>

  <!-- jquery -->
  <script   src="https://code.jquery.com/jquery-3.1.1.min.js"   integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="   crossorigin="anonymous"></script>
  <script src="scripts/search.js"></script>
  <!-- bootsrapMD javascript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.3.0/js/mdb.min.js"></script>
</html>
